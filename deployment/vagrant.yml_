---

- name: Create a {{ application_name }} virtual machine via vagrant
  hosts: all
  sudo: yes
  sudo_user: "{{remoteu}}"
  remote_user: vagrant
  vars:
    - setup_git_repo: yes
    - update_apt_cache: yes
  vars_files:
    - env_vars/base.yml
    - env_vars/vagrant.yml
    - env_vars/pass.yml # always use last

  roles:
    - base
    - db
    - rabbitmq
    - web
    - celery
